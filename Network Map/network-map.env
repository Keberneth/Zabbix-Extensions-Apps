# /etc/network-map/network-map.env

# Zabbix
NETWORK_MAP_ZABBIX_URL=https://zabbix.example.se/api_jsonrpc.php
NETWORK_MAP_ZABBIX_TOKEN=replace_with_real_token

# NetBox
NETWORK_MAP_NETBOX_URL=https://netbox.example.se
NETWORK_MAP_NETBOX_TOKEN=replace_with_real_token

# App settings
NETWORK_MAP_ZABBIX_REFRESH_SECONDS=1800
NETWORK_MAP_REPORT_DIR=/opt/network_map/reports

